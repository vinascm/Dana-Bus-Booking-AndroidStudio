<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/splashScreenLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorBackgroundUserProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerInParent="true"

        android:gravity="center">

        <!-- Image view anim 1-->
        <ImageView
            android:id="@+id/imageSplashScreenAnimImageView"

            android:layout_width="@dimen/imageSplashScreenSize"
            android:layout_height="@dimen/imageSplashScreenSize"

            android:layout_centerHorizontal="true"

            android:src="@drawable/logo" />

    </RelativeLayout>

</RelativeLayout>